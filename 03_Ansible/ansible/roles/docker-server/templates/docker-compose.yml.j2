# docker-compose.yml.j2
version: '3'
services:
  wordpress:
    image: wordpress
    ports:
      - "8080:80"
    networks:
      - mynetwork
    depends_on:
      - db
  db:
    image: mariadb
    environment:
      MYSQL_ROOT_PASSWORD: example
      MYSQL_DATABASE: wordpress
      MYSQL_USER: wordpress
      MYSQL_PASSWORD: wordpress
    networks:
      - mynetwork
