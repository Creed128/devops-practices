# Stage 1: Build
FROM python:latest as builder
WORKDIR /app

# Kopiere die Anwendungsdateien
COPY app.py .
COPY requirements.txt .

# Installiere Abh채ngigkeiten (falls vorhanden)
RUN pip install --no-cache-dir -r requirements.txt

# Stage 2: Runtime
FROM python:latest
WORKDIR /app

# Kopiere nur das aus der vorherigen Stufe, was f체r die Ausf체hrung notwendig ist
COPY --from=builder /app .

# F체hre die Anwendung aus
CMD ["python", "app.py"]
